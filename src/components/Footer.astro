<footer class="bg-[#45455F]/28 text-[#93FF57] p-8 font-bold text-sm rounded-xl max-w-[1240px] mx-auto">
    <div class="flex flex-col items-center gap-12 md:flex-row md:items-start md:justify-start">
  
      <!-- Imagen del búho -->
      <div class="mb-4 hidden md:block">
        <img src="/disbeltobuhofooter.svg" class="h-40 md:h-64 pl-0 md:pl-6 mx-auto md:mx-0" alt="búho" />
      </div>
  
      <!-- Contenido (menú + contacto/redes) -->
      <div class="flex flex-col items-center gap-8 md:items-start md:pl-20">
  
        <!-- MENÚ -->
        <div id="menu-footer" class="text-center md:text-left">
          <nav class="flex flex-col gap-2">
            <span class="text-[#FFACE4] text-xl md:text-xl hidden md:block">///menu</span>
            <a href="#HEADER" class="text-xl text-[#93FF57] md:pl-6">&lt;inicio&gt;</a>
            <a href="#WORKS" class="text-xl text-[#93FF57] md:pl-6">&lt;portfolio&gt;</a>
            <a href="#" class="text-xl text-[#93FF57] md:pl-6">&lt;servicios&gt;</a>
          </nav>
        </div>
  
        <!-- CONTACTO -->
        <div id="contact-footer" class="text-center md:text-left">
          <div class="flex flex-col gap-2">
            <span class="text-[#FFACE4] text-xl hidden md:block">///contact</span>
            <a class="text-xl text-[#93FF57] hidden md:block pl-6">&lt;email&gt; disbeltoagency@gmail.com &lt;/email&gt;</a>
            <a class="text-xl text-[#93FF57] hidden md:block pl-6">&lt;cel&gt; +54 11 3940 3675 &lt;/cel&gt;</a>
            <a class="text-xl text-[#93FF57] hidden md:block pl-6">&lt;social&gt; linkedin/ejemplo &lt;/social&gt;</a>
            <a class="text-xl text-[#FFACE4] -mt-2 md:hidden">&lt;redes&gt;</a>
          </div>
        </div>
  
        <!-- REDES sociales (opcional, como en la imagen mobile) -->
        <div class="flex gap-4  md:mt-0 sm:hidden">
          <!-- Aquí podés insertar tus íconos SVG o usar <img src="..." /> -->
          <div class="bg-[#93FF57] text-black p-2 rounded-xl">
            <img src="/rrss-mobile/mail.svg" class="h-6 w-6" alt="mail" />
          </div>
          <div class="bg-[#93FF57] text-black p-2 rounded-xl">
            <img src="/rrss-mobile/whatsapp.svg" class="h-6 w-6" alt="whatsapp" />
          </div>
          <div class="bg-[#93FF57] text-black p-2 rounded-xl">
            <img src="/rrss-mobile/instagram.svg" class="h-6 w-6" alt="instagram" />
          </div>
          <div class="bg-[#93FF57] text-black p-2 rounded-xl">
            <img src="/rrss-mobile/linkedin.svg" class="h-6 w-6" alt="linkedin" />
          </div>
          <div class="bg-[#93FF57] text-black p-2 rounded-xl">
            <img src="/rrss-mobile/github.svg" class="h-6 w-6" alt="github" />
          </div>
        </div>
  
      </div>
    </div>
  </footer>
  